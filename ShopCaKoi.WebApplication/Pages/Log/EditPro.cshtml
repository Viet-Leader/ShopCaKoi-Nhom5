@page
@model ShopCaKoi.WebApplication.Pages.Log.EditProModel
@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin Khách Hàng";
}

<h2>Chỉnh Sửa Thông Tin Khách Hàng</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Tên</label>
        <input type="text" asp-for="Customer.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" asp-for="Customer.Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="Phone">Số Điện Thoại</label>
        <input type="text" asp-for="Customer.Phone" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Address">Địa Chỉ</label>
        <input type="text" asp-for="Customer.Address" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu Thay Đổi</button>
    <a asp-page="/Log/DetailsPro" class="btn btn-secondary mt-3">Hủy</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
