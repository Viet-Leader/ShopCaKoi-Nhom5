@page
@model ShopCaKoi.WebApplication.Pages.InforTrip.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trip[0].DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip[0].ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip[0].Farm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip[0].Farm.Koi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Trip)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm.FarmId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Farm.Koi.KoiId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TripId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TripId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TripId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
