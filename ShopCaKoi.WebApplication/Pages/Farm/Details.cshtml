@page
@model ShopCaKoi.WebApplication.Pages.Farm.DetailsModel
@{
    ViewData["Title"] = "Details Farm";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="/css/tiny-slider.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <title>ShopCaKoiT1-Farm</title>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.9/dist/flatpickr.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.9/dist/flatpickr.min.css">
</head>
<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>@Model.KoiFarm.Name</h1>
                </div>
            </div>
            <div class="col-lg-7">
                
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->
<section id="about" class="scrollspy-section padding-xlarge">
    <div class="container">
        <div class="row">

            <div class="col-md-12">

                <div class="section-header">
                    <div class="title">
                    </div>
                    <pre class="section-title">         
                    </pre>
                </div>
            </div>

        </div>


        <div class="row">

            <div class="col-md-6">
                <figure class="jarallax-keep-img">
                    <img src="@Model.KoiFarm.ImageUrl" alt="@Model.KoiFarm.Name" class="jarallax-img single-image">
                </figure>
            </div>
            <div class="col-md-6 description text-lead" style="font-size: large;">
                <p><b>@Html.DisplayNameFor(model => model.KoiFarm.Location):</b>    @Html.DisplayFor(model => model.KoiFarm.Location)</p>
                <p><b>@Html.DisplayNameFor(model => model.KoiFarm.Description):</b> @Html.DisplayFor(model => model.KoiFarm.Description)</p>
                <p><b>@Html.DisplayNameFor(model => model.KoiFarm.ContactInfo):</b>  @Html.DisplayFor(model => model.KoiFarm.ContactInfo)</p>

            </div>

        </div>

    </div>
</section>

<section id="portfolio" class="scrollspy-section bg-dark padding-large" style="margin-top: 49px;">
    <div class="container">

        <div class="row">
            <div class="col-md-12">

                <div class="section-header">
                    <h2 class="section-title light">Types of fish on the farm</h2>
                </div>
            </div>
        </div>
        <!--Start column Koi-->
        <div class="untree_co-section product-section before-footer-section">
            <div class="container">
                <div class="row">
                     @foreach (var koi in Model.Kois)
                    {

                        <!-- Start Column 1 -->
                        <div class="col-12 col-md-4 col-lg-3 mb-5">
                            <img src="@koi.ImageUrl" class="img-fluid product-thumbnail">
                            <h3 class="product-title" style="color: aliceblue;">@koi.Species</h3>
                            <strong class="product-price" style="color: aliceblue;">@(koi.Price.HasValue ? koi.Price.Value.ToString("N0") : "Không có giá") vnd</strong>
                        </div>
                        <!-- End Column 1 -->
                    }
                </div>
            </div>
        </div>

    </div>
</section>

<div>
    <a href="/Farm/Index">
        <button type="submit" class="btn btn-primary mt-3">Back to Farm</button>
    </a>
</div>
<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/tiny-slider.js"></script>
<script src="/js/custom.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>

